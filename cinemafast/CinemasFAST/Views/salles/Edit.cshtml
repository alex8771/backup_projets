@model CinemasFAST.Models.EditSalle_ViewModel
@{
    ViewBag.Title = "Edit";
}

    <div class="jumbotron">
        <h2>Détails de la salle @Session["numeroSalleActuelle"] <span class="bg-dark rounded text-warning float-right p-2 shadow">Cinéma @Session["nomCinemaActuel"]</span></h2>
    </div>

<div class="d-flex row justify-content-center">
    <!--Affichage de la vue partielle qui contient l'index des salles-->
    <div class="col-8">
        @Html.Partial("~/Views/salles/_Edit.cshtml", Model.SalleDetails)
    </div>

    <!--Affichage de la vue partielle qui permet de modifier le responsable du cinéma-->
    <div class="col-3">
        @Html.Partial("~/Views/supplements/_Edit.cshtml", Model.SupplementDetails)
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
