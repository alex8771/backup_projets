@model CinemasFAST.Models.role

@using (Html.BeginForm("Create", "roles"))
{
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <input type="button" value="Ajouter un rôle" class="btn btn-success"
               data-toggle="modal" data-target="#exampleModal" />
    </div>

    <div class="modal fade" id="exampleModal" data-backdrop="false" tabindex="-1" role="dialog" aria-labelledby="Longtitle3" 
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="Longtitle3">Créer un rôle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group d-none">
                        @Html.LabelFor(model => model.id_film, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12 disabled">
                            @Html.DropDownList("id_film", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.id_film, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.id_acteur, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.DropDownList("id_acteur", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.id_acteur, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.nom_personnage, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.nom_personnage, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nom_personnage, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Ajouter" class="btn btn-success" />
                    <button type="button" class="btn btn-secondary">@Html.ActionLink("Créer un acteur", "Create", "acteurs", null, null)</button>
                </div>
            </div>
        </div>
    </div>
}

