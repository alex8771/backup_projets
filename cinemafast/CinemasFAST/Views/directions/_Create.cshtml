@model CinemasFAST.Models.direction

@using (Html.BeginForm("Create", "directions"))
{
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <input type="button" value="Ajouter un directeur" class="btn btn-success"
               data-toggle="modal" data-target="#modalCreate" />
    </div>

    <div class="modal fade" id="modalCreate" data-backdrop="false" tabindex="-1" role="dialog" aria-labelledby="CenterTitle"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="LongTitle1">Ajouter un directeur</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group d-none">
                        @Html.LabelFor(model => model.id_film, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.DropDownList("id_film", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.id_film, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.id_directeur, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.DropDownList("id_directeur", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.id_directeur, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <input type="submit" value="Ajouter" class="btn btn-success" />
                    <button type="button" class="btn btn-secondary">@Html.ActionLink("Créer un directeur", "Create", "directeurs", null, null)</button>
                </div>
            </div>
        </div>
    </div>

}

