@model CinemasFAST.Models.estpresente

@using (Html.BeginForm("Create", "estpresentes"))
{
@Html.AntiForgeryToken()


                <div class="modal fade" id="presentationCreate" tabindex="-1" role="dialog" aria-labelledby="Longtitle3"
                     aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="Longtitle3">Ajouter un film</h5>
                                <h4 class="text-danger">@Session["createErreur"]</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.id_film, "Titre du film", htmlAttributes: new { @class = "control-label col-md-12" })
                                    <div class="col-md-12">
                                        @Html.DropDownList("id_film", null, htmlAttributes: new { @class = "form-control col-12" })
                                        @Html.ValidationMessageFor(model => model.id_film, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group d-none">
                                    @Html.LabelFor(model => model.id_seance, "id_seance", htmlAttributes: new { @class = "control-label col-md-12" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(Model => Model.id_seance)
                                        @Html.ValidationMessageFor(model => model.id_seance, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.isprincipal, htmlAttributes: new { @class = "control-label col-6 d-inline" })
                                    <div class="col-md-6">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.isprincipal, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.isprincipal, "", new { @class = "text-danger col-6" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <input type="submit" value="Ajouter" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                </div>
}
